<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginVertical="20dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
        android:id="@+id/heart_ll_main_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="5dp"
        android:background="@drawable/rounder_corners">

        <ImageView
            android:layout_width="150dp"
            android:paddingHorizontal="8dp"
            android:layout_height="150dp"
            android:src="@drawable/heart_emergency"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="HEART"
                android:textSize="32sp"
                android:textColor="#FF0000"
                android:textStyle="bold"
                android:paddingTop="10dp"
                android:gravity="center_horizontal"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/heart_symptoms"
                android:paddingTop="2dp"
                android:textSize="16sp"
                android:textColor="@color/black"/>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/brain_ll_main_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="5dp"
        android:background="@drawable/rounder_corners">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:paddingHorizontal="8dp"
            android:src="@drawable/brain_emergency"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Brain"
                android:textSize="32sp"
                android:textColor="#FF0000"
                android:textStyle="bold"
                android:paddingTop="10dp"
                android:gravity="center_horizontal"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/brain_symptoms"
                android:paddingTop="2dp"
                android:textSize="16sp"
                android:textColor="@color/black"/>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/cancer_ll_main_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="5dp"
        android:background="@drawable/rounder_corners">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:paddingHorizontal="8dp"
            android:src="@drawable/cancer_emergency"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cancer"
                android:textSize="32sp"
                android:textColor="#FF0000"
                android:textStyle="bold"
                android:paddingTop="10dp"
                android:gravity="center_horizontal"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/cancer_related_symptoms"
                android:paddingTop="2dp"
                android:textSize="16sp"
                android:textColor="@color/black"/>

        </LinearLayout>
    </LinearLayout>
        <LinearLayout
            android:id="@+id/infant_ll_main_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="5dp"
            android:background="@drawable/rounder_corners">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:paddingHorizontal="8dp"
                android:src="@drawable/infant_emergency"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Infants"
                    android:textSize="32sp"
                    android:textColor="#FF0000"
                    android:textStyle="bold"
                    android:paddingTop="20dp"
                    android:gravity="center_horizontal"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/infant_emergency_symptoms"
                    android:paddingTop="2dp"
                    android:textSize="16sp"
                    android:textColor="@color/black"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/pregrency_ll_main_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="5dp"
            android:background="@drawable/rounder_corners">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:paddingHorizontal="8dp"
                android:src="@drawable/pregrency_emergency"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pregrency"
                    android:textSize="32sp"
                    android:textColor="#FF0000"
                    android:textStyle="bold"
                    android:paddingTop="20dp"
                    android:gravity="center_horizontal"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/pregrency_relatedEmergency_symptoms"
                    android:paddingTop="2dp"
                    android:textSize="16sp"
                    android:textColor="@color/black"/>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>



</ScrollView>